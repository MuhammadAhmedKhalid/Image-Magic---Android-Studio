<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="@color/light_gray"/> <!-- Background color -->
            <corners android:radius="4dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/gray"/> <!-- Progress color -->
                <corners android:radius="4dp"/> <!-- Rounded corners -->
            </shape>
        </clip>
    </item>
</layer-list>
